{
  "name": "grommet",
  "version": "2.0.0",
  "main": "index.js",
  "module": "es6/index.js",
  "jsnext:main": "es6/index.js",
  "description": "focus on the essential experience",
  "authors": [
    "Alan Souza",
    "Bryan Jacquot",
    "Chris Carlozzi",
    "Eric Soderberg"
  ],
  "homepage": "http://grommet.io",
  "bugs": "https://github.com/grommet/grommet/issues",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/grommet/grommet.git"
  },
  "engine-strict": true,
  "engines": {
    "node": ">= 4.4.0"
  },
  "scripts": {
    "test": "grommet check",
    "dist": "grommet pack && babel ./src/js/ --ignore '__tests__' --out-dir ./dist && cross-env BABEL_ENV=es babel ./src/js/ --ignore '__tests__' --out-dir ./dist/es6"
  },
  "dependencies": {
    "deep-assign": "^2.0.0",
    "prop-types": "^15.5.10",
    "react": "^15.4.0",
    "react-desc": "^1.1.0",
    "react-dom": "^15.4.0",
    "styled-components": "^2.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-core": "^6.5.2",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^18.0.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-styled-components": "^1.1.7",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-1": "^6.24.1",
    "babel-root-import": "^4.1.8",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^5.0.1",
    "eslint": "^3.9.1",
    "eslint-config-airbnb": "^15.0.2",
    "eslint-parallel": "^0.1.0",
    "eslint-plugin-babel": "^4.1.1",
    "eslint-plugin-class-property": "^1.0.6",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "grommet-cli": "^4.0.1",
    "jest-styled-components": "^4.0.3",
    "pre-commit": "^1.2.2",
    "react-dev-utils": "^0.4.2",
    "react-test-renderer": "^15.4.1",
    "webpack": "^2.2.1"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "lcov"
    ],
    "collectCoverageFrom": [
      "src/js/components/**/*.{js}",
      "src/js/theme/**/*.{js}"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](dist|templates|node_modules)[/\\\\]"
    ]
  },
  "pre-commit": [
    "test"
  ]
}
