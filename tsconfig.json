{
  "compileOnSave": true,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./dist/",
    "sourceMap": true,
    "skipLibCheck": true, // ignore storybook typing issues
    "noImplicitAny": false,
    "module": "esnext",
    "target": "es6",
    "jsx": "react",
    "strictPropertyInitialization": false,
    "declaration": true,
    "strict": false,
    "baseUrl": "./",
    "paths": {
      "grommet": ["src/js"],
      "grommet/themes": ["src/js/themes"],
      "grommet/utils": ["src/js/utils"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
